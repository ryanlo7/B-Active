<!DOCTYPE html>
<html>
    <head>
        <title>Profile <a href='/edit/<%= userId %>'> (edit) </a></title>
    </head>
    <body>
    <h1>Profile</h1>
    <h3>Email: <%- email %> </h3>
    <h2>Activities</h2>
    <table>
        <thead>
            <tr>
                <th>Activity</th> <th>Skill Level</th> <th>Interest Level</th>
            </tr>
        </thead>
        <% for (let i = 0; i < activities.length; i++) { %>
            <tr>
                <td><%- activities[i].name %></td>
                <td><%- activities[i].skill %></td>
                <td><%- activities[i].interest %></td>
            </tr>
        <% } %>
    </table>
    <h2>Availability</h2>
    <table>
        <thead>
            <tr>
                <th>Monday</th> <th>Tuesday</th> <th>Wednesday</th> <th>Thursday</th> 
                <th>Friday</th> <th>Saturday</th> <th>Sunday</th>
            </tr>
        </thead>
        <% for (let i = 0; i < 48; i++) { %>
            <tr>
                <% for (let j = 0; j < 7; j++) { %>
                    <% if (availability[j][i]) { %>
                        <td bgcolor="#00FF00" ></td>
                    <% } else { %>
                        <td bgcolor="#FF0000" ></td>
                    <% } %>
                <% } %>
            </tr>
        <% } %>
    </table>
    </body>
</html>